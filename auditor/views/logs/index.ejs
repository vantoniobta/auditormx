<script type="text/javascript">

      window.statusTable = $('#logsTable').Table({         
             id : 'lasts',
             width : '100%',             
             source:'/logs/table',
             rows:10,            
             searcher:true,
             sortable:true,             
             primary:'_id',
             headers : [ 
                    {db:'id',name:'CÃ³digo',classname:'left',width:'15%'},
                    {db:'user_name',name:'Usuario',classname:'left',width:'15%'},                    
                    {db:'createdAt',name:'Fecha',classname:'left',width:'10%',valueFunction:function(i,o){  
                        var months = ['Ene','Feb','Mar','Abr','May','Jun','Jul','Ago','Sep','Oct','Nov','Dic'];
                        var  tdate = new Date(o.createdAt);
                        var  date = tdate.getDate()+'-'+ months[tdate.getMonth()]+'-'+tdate.getFullYear() +' '+ tdate.getHours()+':'+tdate.getMinutes();                                                   
                        return date;
                    }},                    
                    {db:'message',name:'Mensaje',classname:'left',width:'15%'}
                 ],
            onCompleteRequest : function(){  
                $('.status_tooltip').tooltip();
            }
        });


</script>