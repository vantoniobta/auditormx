
  <div class="row">
    <div class="col-xs-12 col-sm-7 col-md-5 col-lg-5">
      <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-envelope"></i> Mail List </h1>
    </div>
  </div>

<section class="row" >    


    <div class="col-md-8">

      <div id="filters" class="panel panel-default">
          <div class="panel-heading ">              
            <span class="widget-icon"> 
              <i class="fa fa-calendar"></i> 
            </span>
            <h2> Envio de correos </h2>           
          </div>
          <div class="panel-body">
            <form class="form-vertical " action="" method="post" id="send-mails">
              <div class='form-group'>

                <div class='controls col-md-8'  style='margin-top:15px'>
                  <label class='control-label' for='subject'> Asunto: </label>
                  <input type='text' class='form-control' id='subject' name='subject' style='margin-bottom:15px' required>
                </div>

                <br>
                
                <div class="form-group">
                  <label for="user_type" class="control-label">Tipo de usuario: </label>
                  <div class="controls col-md-4">  
                   <select name="role" id="role" class="form-control">                     

                    </select>
                  </div>
                </div>

                <br>
              </div>

              <div class='form-group'>
                <div class='controls col-md-12'  style='margin-top:15px'>
                  <label class='control-label' for='text'> Mensage: </label>
                  <!--textarea rows='8' type='text' class='form-control' id='text' name='text' style='margin-bottom:15px' required></textarea-->
                  <textarea rows='8' cols='2' type='text' class='form-control' id='text' name='text' style='margin-bottom:15px' required></textarea>
                </div>

                <br>
              </div>

              <div class='form-group'>
                <div class="controls" >                          
                  <button type="submit" style='margin:15px 0px 0px 15px' class="btn btn-default btn-small">
                    <i class="glyphicon glyphicon-floppy-saved"> </i> Guardar
                  </button>                        
                </div>

              </div> 

            </form>  
          </div> 
      </div> <!-- end panel -->      
        

    </div> <!-- end col-md-4 -->

</section>


<script>
  $(window).load(function(){
    var Mailist = new Core_Mailist({role:'<%-session.user.role %>'});
        Mailist.run();
         
  });
  </script>