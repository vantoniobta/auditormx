
<div class="row panel-login-container" >
    <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
    <div class="card panel-login">
      <div class="card-block">
         <form action="" method="post" id="activateForm" autocomplete="off">
            <h2 class="title"><span>Activar  </span>  Cuenta</h2>

            <div class="form-group  <%= key ? 'hide' : '' %>" id="code-group">
             <label class="separate">Código:</label>
             <input type="text" name="user[key]" id="user_key" value="<%= key ? key : '' %>" class="span10 form-control form-control-warning" required autocomplete="off"/>
              <div class="msg_input help-block"  id="code-msg"></div>
              <!-- <span  class="help-block">Favor de ingresar código de activación</span> -->
            </div>

            <div class="form-group" id="name-group">
             <label class="separate">Nombre:</label>
             <input type="text" name="user[name]" id="user_name" class="span10 form-control form-control-warning" required  autocomplete="off"/>
              <div class="msg_input help-block"  id="name-msg"></div>
              <!-- <span  class="help-block">Favor de ingresar código de activación</span> -->
            </div>
            <div class="form-group" id="password-group">
             <label class="separate">Password</label>
             <input type="password" name="user[password]" id="user_password" class="span10 form-control form-control-warning" required  autocomplete="off"/>
              <div class="msg_input help-block"  id="password-msg"></div>
              <!-- <span  class="help-block">Favor de ingresar código de activación</span> -->
            </div>
            <div class="form-group " id="repassword-group">
             <label class="separate">Validar Password:</label>
             <input type="password" name="repassword" id="repassword" class="span10 form-control form-control-warning" required  autocomplete="off"/>
              <div class="msg_input help-block" id="repassword-msg"></div>
              <!-- <span  class="">Favor de ingresar código de activación</span> -->
            </div>

             <div class="form-group">
                <button class="btn btn-success btn-lg btn-block" >Activar!</button>
            </div>
          <div class="form-group">
            <br/>
              <a href="/login/" class="lostpassword button_green"><span class="glyphicon glyphicon-chevron-right"></span> Iniciar Sesión! </a>
              <a href="/login/recovery" class="pull-right"><span class="glyphicon glyphicon-lock"></span> Recuperar Password? </a>
          </div>
        </form> <!-- end form -->
      </div> <!-- end panel-body -->
    </div> <!-- end panel -->
  </div> <!-- end col  -->
 </div> <!-- end row -->


 <script type="text/javascript">

 if (document.getElementsByTagName) {
  var inputElements = document.getElementsByTagName(“input”);
  for (i=0; inputElements[i]; i++) {
    if (inputElements[i].className && (inputElements[i].className.indexOf(“disableAutoComplete”) != -1)) {
    inputElements[i].setAttribute(“autocomplete”,”off”);
    }
  }
}

    var in_name     = document.getElementById('user_name');
    var in_code     = document.getElementById('user_code');
    var in_password = document.getElementById('user_password');
    var repassword  = document.getElementById('repassword');

    in_name.oninvalid = function(){
      $('#name-group').addClass('has-warning');
      $('#name-msg').html('El nombre del usuario es requerido');
    }

    in_password.oninvalid = function(){
      $('#password-group').addClass('has-warning');
      $('#password-msg').html('El password del usuario es requerido');
    }

    repassword.oninvalid = function(){
      $('#repassword-group').addClass('has-warning');
      $('#repassword-msg').html('Es necesario que escriba nuevamente el password para válidarlo');
    }

    $('#activateForm').submit(function(){

      $('#password-group').removeClass('has-warning');
      $('#repassword-group').removeClass('has-warning');
      $('#name-group').removeClass('has-warning');
      $('#code-group').removeClass('has-warning');

      if(in_password.value == repassword.value ){
         return true;
      }else{
        $('#repassword-group').addClass('has-warning');
        $(repassword).addClass('form-control-warning');
        $('#repassword-msg').html('El password no coincide');
      }
      return false;
    });

 </script>
